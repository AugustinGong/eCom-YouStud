<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Autore</th>
      <th>Prezzo</th>
      <th>Descrizione</th>
      <th colspan="3">Azioni</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.titolo %></td>
        <td><%= book.autore %></td>
        <td><%= book.prezzo %></td>
        <td><%= book.desciption %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

