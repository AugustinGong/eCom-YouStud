<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: book, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
        
        <div class="form-group row mb-3">
          <%= form.label :titolo, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :titolo, class: "form-control shadow rounded", placeholder: "Titolo del libro" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :autore, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :autore, class: "form-control shadow rounded", placeholder: "Autore del libro" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :prezzo, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :prezzo, class: "form-control shadow rounded", placeholder: "Prezzo del libro" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= form.label :desciption, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :desciption, rows: 8, class: "form-control shadow rounded", placeholder: "Descrizione del libro" %>
          </div>
        </div>

        <div class="form-group justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg shadow rounded" %>
        </div>
      <% end %>
    </div>
    <div class="form-group mb-3 justify-content-center">
      <%= link_to '[Indietro]', books_path, class: "btn btn-outline-info btn-lg shadow rounded" %>
    </div>
  </div>
</div>